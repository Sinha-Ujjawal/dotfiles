" setting syntax highlighting on
syntax on

" settings for help in searching text
set ignorecase
set smartcase
set incsearch

" show existing tab with 4 spaces width
set tabstop=4
" when indenting with '>', use 4 spaces width
set shiftwidth=4
" On pressing tab, insert 4 spaces
set expandtab

" sticking the scroll to 5 lines from both top and bottom
set scrolloff=5

" set relative number and number
set rnu nu      " set relative numbering

" disable bell
set belloff=all

" set color scheme to `desert`
colorscheme desert

" enable backspace
set backspace=indent,eol,start
